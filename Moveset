end

-- Function to handle player respawn
local function onCharacterAdded(character)
    -- Add a 0.11 second delay before running the script
    wait(0.11)
    
    -- Call the createHyperBoltTool function
    createHyperBoltTool()
end

-- Main logic to handle initial tool creation and respawn
local player = game.Players.LocalPlayer

-- When the player first joins, add the tool
if player.Character then
    onCharacterAdded(player.Character)
end

-- Recreate the tool every time the player respawns
player.CharacterAdded:Connect(onCharacterAdded)

